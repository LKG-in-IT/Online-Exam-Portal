@using OEP.Web.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
    Layout = "~/Views/Shared/_ExternalLayout.cshtml";
}


<div class="container">
    <div class="row h-full align-items-center">
        <div class="col-md-8 col-lg-5 mx-auto" data-zanim-timeline="{}" data-zanim-trigger="scroll">
            <div data-zanim='{"delay":0}'>
                <a href="index-2.html">
                    <img src="/Content/assets/images/logo-light.png" alt="" />
                </a>
            </div>
            <div class="background-white radius-secondary p-4 p-md-5 mt-5" data-zanim='{"delay":0.1}'>
                <h4 class="text-uppercase fs-0 fs-md-1">login with Uviwo</h4>
                @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "text-left mt-4", role = "form" }))
                            {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="row align-items-center">
                                <div class="col-12">
                                    <div class="input-group">
                                        <div class="input-group-addon background-11 fs-2">
                                            <span class="ion-ios-person-outline"></span>
                                        </div>
                                        @Html.TextBoxFor(m => m.Email, new {@class = "form-control", @placeholder = "Email or username", @aria_label = "Text input with dropdown button"})
                                        @Html.ValidationMessageFor(m => m.Email, "", new {@class = "text-danger"})
                                    </div>
                                </div>
                                <div class="col-12 mt-2 mt-sm-4">
                                    <div class="input-group">
                                        <div class="input-group-addon background-11 fs-2">
                                            <span class="ion-ios-locked-outline"></span>
                                        </div>
                                        @Html.PasswordFor(m => m.Password, new {@class = "form-control", @placeholder = "Password", @aria_label = "Text input with dropdown button"})
                                        @Html.ValidationMessageFor(m => m.Password, "", new {@class = "text-danger"})
                                    </div>
                                </div>
                            </div>

                            <div class="row align-items-center mt-3">
                                <div class="col-6">
                                    <label class="form-check-label">
                                        @Html.CheckBoxFor(m => m.RememberMe, new {@class = "form-check-input"})
                                        @Html.LabelFor(m => m.RememberMe, new {@class = "color-7"})
                                    </label>
                                </div>
                                <div class="col-6 mt-2 mt-sm-3">
                                    <button class="btn btn-primary btn-block" type="submit" style="cursor: pointer">Login</button>
                                </div>
                            </div>

                            <div class="row align-items-center mt-3">
                                <div class="col-6 mt-2 mt-sm-3">
                                    @Html.ActionLink("Register as a new user", "Register")
                                </div>
                                <div class="col-6 mt-2 mt-sm-3">
                                    @Html.ActionLink("Forgot your password?", "ForgotPassword")
                                </div>
                            </div>


                            }

            </div>
        </div>
    </div>
    <!--/.row-->
</div>
<!--/.container-->



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}