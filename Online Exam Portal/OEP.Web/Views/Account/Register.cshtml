@model OEP.Web.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_ExternalLayout.cshtml";
}

<div class="container">
    <div class="row h-100vh align-items-center">
        <div class="col-md-9 col-lg-6 mx-auto" data-zanim-timeline="{}" data-zanim-trigger="scroll">
            <div data-zanim='{"delay":0}'>
                <a href="index-2.html">
                    <img src="/Content/assets/images/logo-light.png" alt="">
                </a>
            </div>
            <div class="background-white radius-secondary p-4 p-md-5 mt-5" data-zanim='{"delay":0.1}'>
                <h4 class="text-uppercase fs-0 fs-md-1">Create your Uviwo account</h4>



                @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "mt-4 text-left", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    
                    @Html.ValidationSummary("", new { @class = "text-danger" })

                    <div class="row align-items-center">
                        <div class="col-12 mt-4">
                            @Html.TextBoxFor(m => m.Name, new {@class = "form-control", @placeholder = "Name"})
                        </div>
                        <div class="col-6 mt-4">
                            @Html.TextBoxFor(m => m.Email, new {@class = "form-control", @placeholder = "Email"})
                        </div>
                        <div class="col-6 mt-4">
                            @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control", @type = "Number", @placeholder = "Phone" })
                        </div>
                       
                        <div class="col-6 mt-4">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Password" })
                        </div>
                        <div class="col-6 mt-4">
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @placeholder = "Confirm Password" })
                        </div>
                       
                        
                    </div>

                    <div class="row align-items-center mt-3">
                        <div class="col-md-6 mt-3">
                            <label class="form-check-label">
                                <input class="form-check-input" type="checkbox">
                                <span class="color-7">I agree with the terms &amp; conditions</span>
                            </label>
                        </div>
                        <div class="col-md-6 mt-3">
                            <button class="btn btn-primary btn-block" type="submit">Create Account</button>
                        </div>
                    </div>

                    <div class="row align-items-center mt-3">
                        <div class="col-md-12 mt-3">
                            @Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { @class = "btn btn-primary btn-block", @type = "button" })
                        </div>
                    </div>

                }
               
            </div>
        </div>
    </div>
    <!--/.row-->
</div>
<!--/.container-->



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
